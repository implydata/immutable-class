{
  "compilerOptions": {
    "declaration": true,
    "esModuleInterop": true,
    "importHelpers": true,
    "keyofStringsOnly": true,
    "lib": ["es2016"],
    "moduleResolution": "node",
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "build",
    "removeComments": true,
    "rootDir": "src",
    "strict": true,
    "target": "es5"
  },
  "include": ["src/**/*.ts"]
}
