{
  "name": "immutable-class",
  "version": "0.10.0",
  "description": "A template for creating immutable classes",
  "keywords": [
    "immutable",
    "class"
  ],
  "author": {
    "name": "Vadim Ogievetsky",
    "url": "http://vadim.ogievetsky.com"
  },
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "http://github.com/implydata/immutable-class.git",
    "directory": "packages/immutable-class"
  },
  "jest": {
    "preset": "ts-jest",
    "testMatch": [
      "**/?(*.)+(spec).ts?(x)"
    ]
  },
  "main": "build/index.js",
  "module": "lib/index.js",
  "typings": "types/index.d.ts",
  "scripts": {
    "compile": "tsc --module commonjs && tsc --module esnext --outDir lib/",
    "test": "npm run eslint && jest --silent 2>&1",
    "watch": "tsc --watch",
    "autofix": "npm run eslint-fix && npm run prettify",
    "eslint": "eslint 'src/**/*.ts?(x)'",
    "eslint-fix": "npm run eslint -- --fix --report-unused-disable-directives",
    "eslint-changed-only": "git diff --diff-filter=ACMR --cached --name-only | grep -E \\.tsx\\?$ | xargs ./node_modules/.bin/eslint",
    "eslint-fix-changed-only": "npm run eslint-changed-only -- --fix",
    "prettify": "prettier --write 'src/**/*.{ts,tsx,scss}' './*.js'",
    "prettify-check": "prettier --check 'src/**/*.{ts,tsx,scss}' './*.js'"
  },
  "dependencies": {
    "has-own-prop": "^2.0.0",
    "tslib": "^2.3.1"
  },
  "devDependencies": {
    "@types/jest": "^27.4.0",
    "immutable-class-tester": "^0.7.0",
    "jest": "^27.4.7",
    "ts-jest": "^27.1.3",
    "typescript": "^4.5.5"
  }
}
